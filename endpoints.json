{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/users": {
    "description": "serves an array of all users",
    "queries": [],
    "exampleResponse": {
      "topics": [
        {
          "username": "username",
          "name": "Name",
          "avatar_url": "https://www.avatarurl.com/image.jpg"
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves a single article as an object",
    "queries": [],
    "exampleResponse": {
      "article": [
        {
          "title": "Living in the shadow of a great man",
          "topic": "mitch",
          "author": "butter_bridge",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700"
        }
      ]
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "allows the client to update the votes on a given article",
    "queries": [],
    "exampleRequest": {
      "inc_votes": 1
    },
    "exampleResponse": {
      "article": [
        {
          "title": "Living in the shadow of a great man",
          "topic": "mitch",
          "author": "butter_bridge",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 1,
          "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=70"
        }
      ]
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves an array of comments for a given article",
    "queries": [],
    "exampleResponse": {
      "comment": [
        {
          "comment_id": 1,
          "votes": 2,
          "author": "butter_bridge",
          "body": "Text from the comment...",
          "created_at": "2018-05-30T15:59:13.341Z",
          "article_id": 1
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "allows the client to add a comment to a given article",
    "queries": [],
    "exampleRequest": {
      "username": "butter_bridge",
      "body": "Text from the comment..."
    },
    "exampleResponse": {
      "comment": [
        {
          "comment_id": 1,
          "votes": 2,
          "author": "butter_bridge",
          "body": "Text from the comment...",
          "created_at": "2018-05-30T15:59:13.341Z",
          "article_id": 1
        }
      ]
    }
  },
  "DELETE /api/comments/:comment_id": {
    "description": "deletes the specified comment"
  }
}
